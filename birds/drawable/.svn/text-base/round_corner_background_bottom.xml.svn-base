<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

   <item
      android:state_pressed="true">

      <shape>
         <solid
            android:color="@color/background_pressed" />

         <padding
            android:left="1dip"
            android:top="1dip"
            android:right="1dip"
            android:bottom="1dip" />

         <corners
            android:bottomRightRadius="7dip"
            android:bottomLeftRadius="7dip"
            android:topLeftRadius="1dip"
            android:topRightRadius="1dip" />
      </shape>
   </item>

   <item>
      <shape>
         <solid
            android:color="@color/white" />

         <padding
            android:left="1dip"
            android:top="1dip"
            android:right="1dip"
            android:bottom="1dip" />

         <corners
            android:bottomRightRadius="7dip"
            android:bottomLeftRadius="7dip"
            android:topLeftRadius="1dip"
            android:topRightRadius="1dip" />
      </shape>
   </item>



</selector>
